<Window x:Class="EnumerateGUI.DBConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnumerateGUI"
        mc:Ignorable="d"
        Title="DBConfigWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "0.2*" />
            <RowDefinition Height= "0.7*" />
            <RowDefinition Height = "0.1*" />
        </Grid.RowDefinitions>

        <Grid x:Name="topRow" Grid.Row = "0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "0.1*" />
                <ColumnDefinition Width = "0.7*" />
                <ColumnDefinition Width = "0.2*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="DB Location" Grid.Column="0" Margin="15, 40, 0, 0" />
            <TextBlock x:Name = "DBLocation" Grid.Column="1" Margin="15, 40, 0, 0" />
            <Button x:Name = "ChangeDB" Content = "Change DB" Grid.Column="2" Click="ChangeDB_OnClick" Margin="15, 10, 20, 15" />
        </Grid>

    </Grid>
</Window>
